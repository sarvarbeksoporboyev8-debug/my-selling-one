<h2><%= t('surplus_mailer.listing_matches_watch.heading') %></h2>

<p><%= t('surplus_mailer.listing_matches_watch.intro') %></p>

<div style="background: #f5f5f5; padding: 20px; border-radius: 8px; margin: 20px 0;">
  <h3 style="margin-top: 0;"><%= @listing.title.presence || @listing.variant&.name_to_display %></h3>
  
  <p><strong><%= t('surplus_mailer.seller') %>:</strong> <%= @enterprise.name %></p>
  
  <table style="border-collapse: collapse; width: 100%;">
    <tr>
      <td style="padding: 8px 0;"><strong><%= t('surplus_mailer.quantity_available') %></strong></td>
      <td style="padding: 8px 0;"><%= number_with_precision(@listing.quantity_available, precision: 2) %> <%= @listing.unit %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0;"><strong><%= t('surplus_mailer.current_price') %></strong></td>
      <td style="padding: 8px 0;"><%= number_to_currency(@listing.current_price) %>/<%= @listing.unit %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0;"><strong><%= t('surplus_mailer.expires') %></strong></td>
      <td style="padding: 8px 0;"><%= @listing.expires_at.strftime('%B %d, %Y at %H:%M') %></td>
    </tr>
    <tr>
      <td style="padding: 8px 0;"><strong><%= t('surplus_mailer.pickup_window') %></strong></td>
      <td style="padding: 8px 0;">
        <%= @listing.pickup_start_at.strftime('%b %d %H:%M') %> - 
        <%= @listing.pickup_end_at.strftime('%b %d %H:%M') %>
      </td>
    </tr>
  </table>
  
  <% if @listing.description.present? %>
    <p style="margin-top: 15px;"><%= @listing.description %></p>
  <% end %>
</div>

<p><%= t('surplus_mailer.listing_matches_watch.cta') %></p>

<p style="font-size: 12px; color: #666;">
  <%= t('surplus_mailer.listing_matches_watch.unsubscribe_hint') %>
</p>
